<div id="accountbackground"></div>

<div id="accountInfo">
  <h1 id="userAccount">
    <%=@user.username %>'s Salt Box
  </h1>
</div>
<!--For each post made by user display post title and content  -->
<% @post.each do |post| %>
  <div id="accountPost">
    <p id="ptitle">
      <%= post.title %>
    </p>
    <p id="pcontent">
      <%= post.content%>
    </p>
<!--If current session is equal to the User Account Id -display the following options . Display
this option for each post -->
    <% if session[:user_id] == @user.id %>
      <%= link_to 'Edit Post', edit_post_path(post), :id => "editPost" %>
    <% end %>
  </div>
<% end %>

<!--If current session is equal to the User Account Id -display the following options  -->
<% if session[:user_id] == @user.id %>
  <%= link_to "Create Post", new_post_path,:id => "createPost" %>
  <%= link_to "Delete Account", users_path, :id => "deleteAccount", method: :delete %>
<% end %>
<%=image_tag("Salt.png", :class => "shaker") %>
