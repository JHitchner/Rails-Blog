<%= form_for([@post, @comment]) do |form| %>
  <div id="commenteditContainer">
      <%= form.text_area :commenter, :placeholder => "User", :class=> "editcommentTitle"  %>
      <%= form.submit "Save Comment", :class => "editcommentSubmit"%>
  </div>
<% end %>

<%= link_to 'Back', post_path(@post.id), :class => "backUser" %>
<%= link_to 'Delete Comment',[@comment.post, @comment], method: :delete,
data: { confirm: 'You are about to delete your comment. Continue?' }, :class => "deletecomment"%>
