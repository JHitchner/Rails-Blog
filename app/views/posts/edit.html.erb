<h1>Editing Post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |post| %>
  <p>
    <%= post.label :title %><br>
    <%= post.text_field :title %>
  </p>
  <p>
    <%= post.label :content %><br>
    <%= post.text_area :content %>
  </p>
  <p>
    <%= post.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
